<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EmptyView start -->
    <declare-styleable name="AttrsEmptyView">
        <attr name="Empty_show_loading" format="boolean"/>
        <attr name="Empty_image_view" format="integer"/>
        <attr name="Empty_title_text" format="string"/>
        <attr name="Empty_detail_text" format="string"/>
        <attr name="Empty_btn_text" format="string"/>
    </declare-styleable>
    <!-- EmptyView end -->

    <!--Loading-->
    <declare-styleable name="UILoadingStyle">
        <attr name="LoadingStyle" format="reference"/>
    </declare-styleable>

    <!--************ QMUILoading ***********-->
    <declare-styleable name="LoadingView">
        <attr name="loading_view_size" format="dimension"/>
        <attr name="loading_view_color"  format="color"/>
    </declare-styleable>

    <!--横向多功能View封装-->
    <declare-styleable name="MultipleItemView">
        <attr name="leftTextColor" format="color" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightIcon" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="showTopLine" format="boolean" />
        <attr name="showBottomLine" format="boolean" />
        <attr name="showLeftIcon" format="boolean" />
        <attr name="showRightIcon" format="boolean" />
        <attr name="showEdtText" format="boolean" />
    </declare-styleable>
</resources>